<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EliminarInstructorActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:id="@+id/view_imagen"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/header_langroup"
                />

            <ImageButton
                android:id="@+id/button_regresar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/flecha_regresar"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparente"
                />

            <TextView
                android:id="@+id/txt_eliminar_instructor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar instructor"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                />

            <EditText
                android:id="@+id/edit_text_buscar_instructor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="ðŸ”ŽBuscar"
                />

            <TableLayout
                android:id="@+id/table_instructores"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp" />

            <Button
                android:id="@+id/button_eliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Eliminar"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="140dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/rojo"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>