<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".vista.cuenta.RecuperarContraseniaActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:id="@+id/view_imagen"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/header_langroup"
                />

            <ImageButton
                android:id="@+id/button_regresar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/chevron_left"
                android:layout_below="@id/view_imagen"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:background="@color/transparente"
                />

            <TextView
                android:id="@+id/txt_nueva_contrasenia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nueva contrase単a"
                android:textSize="25dp"
                android:layout_below="@id/view_imagen"
                android:layout_toEndOf="@id/button_regresar"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/txt_contrasenia_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrase単a actual"
                android:textSize="20dp"
                android:layout_below="@id/button_regresar"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                />

            <EditText
                android:id="@+id/edit_text_contrasenia_actual"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:layout_below="@id/txt_contrasenia_actual"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/txt_contasenia_nueva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrase単a nueva"
                android:textSize="20dp"
                android:layout_below="@id/edit_text_contrasenia_actual"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                />

            <EditText
                android:id="@+id/edit_text_contrasenia_nueva"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:layout_below="@id/txt_contasenia_nueva"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/txt_confirmar_contrasenia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmar contrase単a"
                android:textSize="20dp"
                android:layout_below="@id/edit_text_contrasenia_nueva"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                />

            <EditText
                android:id="@+id/edit_text_confirmar_contrasenia"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:layout_below="@id/txt_confirmar_contrasenia"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:id="@+id/button_guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/azul3"
                android:layout_below="@id/edit_text_confirmar_contrasenia"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
    </ScrollView>
</layout>